<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="d-flex justify-content-between align-items-center my-4">
        <h1>Add a movie to "<%= @list.name %>"</h1>
        <%= link_to "Back", @list, class: "btn btn-outline-secondary" %>
      </div>

      <div class="card">
        <div class="card-body">
          <%= simple_form_for [@list, @bookmark] do |f| %>
            <%= f.association :movie,
                collection: Movie.all,
                prompt: "Choose a movie...",
                label: "Movie" %>

            <%= f.input :comment,
                placeholder: "Why do you want to watch this movie?",
                label: "Your comment (minimum 6 characters)" %>

            <div class="d-grid">
              <%= f.submit "Add to List", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
