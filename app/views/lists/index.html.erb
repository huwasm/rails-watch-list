<div class="container">
  <div class="d-flex justify-content-between align-items-center my-4">
    <h1>My Movie Lists</h1>
    <%= link_to "New List", new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="list-card">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= list.name %></h5>
              <p class="card-text">
                <%= pluralize(list.movies.count, 'movie') %>
              </p>
              <%= link_to "See details", list, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
