<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="d-flex justify-content-between align-items-center my-4">
        <h1>New List</h1>
        <%= link_to "Back", lists_path, class: "btn btn-outline-secondary" %>
      </div>

      <div class="card">
        <div class="card-body">
          <%= simple_form_for @list do |f| %>
            <%= f.input :name,
                placeholder: "e.g. Action Movies, Date Night, Classics...",
                label: "List name" %>

            <div class="d-grid">
              <%= f.submit "Create List", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
